<androidx.cardview.widget.CardView
    android:id="@+id/cvCar"
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:elevation="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearr"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:padding="3dp"
        android:layout_margin="4dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID :48674894949"
            android:textSize="14sp"
            android:padding="1dp"
            android:textColor="@color/app_black"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="James Ist Order"
            android:textColor="@color/app_orange"
            android:textSize="14sp"
            android:textStyle="italic"
            android:padding="@dimen/_4sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id"
            android:layout_marginTop="@dimen/_3sdp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            android:layout_marginTop="12dp"/>


        <com.app.perk99driver.custom.CustomTextViewRegular
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preparing"
            android:gravity="center"
            android:padding="@dimen/_6sdp"
            android:textStyle="normal"
            android:textColor="@color/app_black"
            android:textSize="12sp"
            android:background="@drawable/blue_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>




        <TextView
            android:id="@+id/tvPickAddressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick at: "
            android:textColor="@color/transparent_black"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycler"
            android:layout_marginTop="6dp"/>

        <com.app.perk99driver.custom.CustomTextViewRegular
            android:id="@+id/tvPickAddress"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="Sector 22 Market, Jan Marg, Sector 22-D, Sector 22, Chandigarh, India"
            android:textColor="@color/app_black"
            android:textSize="12sp"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/_5sdp"
            android:textStyle="normal"
            android:maxLines="2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycler"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/tvDeliveeryAddressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drop up: "
            android:textColor="@color/transparent_black"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPickAddress"
            android:layout_marginTop="6dp"/>

        <com.app.perk99driver.custom.CustomTextViewRegular
            android:id="@+id/tvDeliveeryAddress"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="Sector 22 Market, Jan Marg, Sector 22-D, Sector 22, Chandigarh, India 2011, 23C, Sector 23, Chandigarh, 160023, India"
            android:textColor="@color/app_black"
            android:textSize="12sp"
            android:layout_marginRight="@dimen/_5sdp"
            android:textStyle="normal"
            android:ellipsize="end"
            android:maxLines="3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPickAddress"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/tvDistanceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance:"
            android:textColor="@color/transparent_black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_3sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDeliveeryAddress"
            android:layout_marginTop="@dimen/_5sdp"/>

        <com.app.perk99driver.custom.CustomTextViewRegular
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14 Mi"
            android:textColor="@color/app_black"
            android:textSize="12sp"
            android:layout_marginRight="@dimen/_5sdp"
            android:textStyle="normal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDeliveeryAddress"
            android:layout_marginTop="@dimen/_5sdp"/>




        <TextView
            android:id="@+id/tvTotalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Bill:"
            android:textColor="@color/transparent_black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_3sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDistanceLabel"
            android:layout_marginTop="@dimen/_5sdp"/>

        <com.app.perk99driver.custom.CustomTextViewRegular
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$560"
            android:textColor="@color/app_black"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:textStyle="normal"
            app:layout_constraintLeft_toRightOf="@+id/tvTotalLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvDistanceLabel"
            android:layout_marginTop="6dp"/>


        <com.app.perk99driver.custom.CustomTextViewRegular
            android:id="@+id/tvPaymentStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAID"
            android:textColor="@color/app_black"
            android:textSize="12sp"
            android:textStyle="normal"
            android:layout_marginRight="@dimen/_5sdp"
            android:visibility="visible"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDistance"
            android:layout_marginTop="6dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cc_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:layout_marginBottom="5dp"
            android:padding="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTotal"

            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cc_reserve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/gray_button_background"
                android:layout_marginBottom="5dp"
                android:padding="6dp"
                >

                <com.app.perk99driver.custom.CustomButtonTextRegular
                    android:id="@+id/tvOrderingTypeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Type:-"
                    android:textColor="@color/app_black"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="3dp"/>

                <com.app.perk99driver.custom.CustomButtonTextRegular
                    android:id="@+id/tvOrderingType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pickup"
                    android:textColor="@color/app_black"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textStyle="normal"
                    android:layout_marginLeft="@dimen/_15sdp"
                    app:layout_constraintLeft_toRightOf="@+id/tvOrderingTypeLabel"
                    android:layout_marginTop="3dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/CCPickUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/tvOrderingType"
                    >
                    <com.app.perk99driver.custom.CustomButtonTextRegular
                        android:id="@+id/tvMealTypeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meal Type:-"
                        android:textColor="@color/app_black"
                        android:textSize="12sp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textStyle="normal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="3dp"/>

                    <com.app.perk99driver.custom.CustomButtonTextRegular
                        android:id="@+id/tvMealType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Individual"
                        android:textColor="@color/app_black"
                        android:textSize="12sp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textStyle="normal"
                        android:layout_marginLeft="@dimen/_15sdp"
                        app:layout_constraintLeft_toRightOf="@+id/tvMealTypeLabel"
                        android:layout_marginTop="3dp"/>


                    <com.app.perk99driver.custom.CustomButtonTextRegular
                        android:id="@+id/tvPickupTimeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pick Up Time-"
                        android:textColor="@color/app_black"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        app:layout_constraintTop_toBottomOf="@+id/tvMealTypeLabel"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="3dp"/>

                    <com.app.perk99driver.custom.CustomButtonTextRegular
                        android:id="@+id/tvPickupTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020-08-22 02:45:34"
                        android:textColor="@color/app_black"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        app:layout_constraintTop_toBottomOf="@+id/tvMealType"
                        android:layout_marginLeft="@dimen/_15sdp"
                        app:layout_constraintLeft_toRightOf="@+id/tvPickupTimeLabel"
                        android:layout_marginTop="3dp"/>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>











    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

